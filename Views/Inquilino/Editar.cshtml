@model inmobiliaria25.Models.Inquilinos

@{
  ViewData["Title"] = "Editar Inquilino";
}

<h1 class="h1-editar-background">Editar Inquilino</h1>

<div class="container-formulario">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <form asp-action="Guardar" class="formulario-formulario" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <!-- Campo oculto para ID -->
        <input type="hidden" asp-for="idInquilino" />

        <div class="form-group mb-3">
          <label asp-for="dni" class="form-label"></label>
          <input asp-for="dni" class="form-control" />
          <span asp-validation-for="dni" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
          <label asp-for="apellido" class="form-label"></label>
          <input asp-for="apellido" class="form-control" />
          <span asp-validation-for="apellido" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
          <label asp-for="nombre" class="form-label"></label>
          <input asp-for="nombre" class="form-control" />
          <span asp-validation-for="nombre" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
          <label asp-for="telefono" class="form-label"></label>
          <input asp-for="telefono" class="form-control" />
          <span asp-validation-for="telefono" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
          <label asp-for="correo" class="form-label"></label>
          <input asp-for="correo" class="form-control" />
          <span asp-validation-for="correo" class="text-danger"></span>
        </div>
        <div class="form-group text-center">
          <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
      </form>
    </div>
  </div>
</div>