@model Inmobiliaria25.Models.Usuario
@{
  ViewData["Title"] = "Detalle Usuario";
}

<h2 class="mb-3">Detalle Usuario</h2>

<table class="table table-bordered">
  <tr>
    <th>Nombre</th>
    <td>@Model.Nombre</td>
  </tr>
  <tr>
    <th>Apellido</th>
    <td>@Model.Apellido</td>
  </tr>
  <tr>
    <th>Email</th>
    <td>@Model.Email</td>
  </tr>
  <tr>
    <th>Rol</th>
    <td>@Model.Rol</td>
  </tr>
  <tr>
    <th>Avatar</th>
    <td>
      @if (!string.IsNullOrEmpty(Model.Avatar))
      {
        <img src="@Model.Avatar" class="img-thumbnail" style="max-width:120px;" />
      }
    </td>
  </tr>
</table>

<a asp-action="Index" class="btn btn-secondary">Volver</a>