<!-- Views/Propietario/Editar.cshtml -->
@model Inmobiliaria25.Models.Propietarios

@{
  ViewData["Title"] = "Editar Propietario";
}

<h2 class="h2-inquilino-background text-center mb-4">Editar Popietarios</h2>

<div class="formulario-card mx-auto">
  <form asp-action="Guardar" method="post">
    <input type="hidden" asp-for="IdPropietario" />

    <div class="mb-3">
      <label asp-for="Dni" class="form-label"></label>
      <input asp-for="Dni" class="form-control" value="@Model.Dni" readonly />
      <span asp-validation-for="Dni" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label asp-for="Apellido" class="form-label"></label>
      <input asp-for="Apellido" class="form-control" />
      <span asp-validation-for="Apellido" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label asp-for="Nombre" class="form-label"></label>
      <input asp-for="Nombre" class="form-control" />
      <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label asp-for="Telefono" class="form-label"></label>
      <input asp-for="Telefono" class="form-control" />
      <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label asp-for="Correo" class="form-label"></label>
      <input asp-for="Correo" class="form-control" />
      <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-gradient">Guardar</button>
    </div>
  </form>
</div>
