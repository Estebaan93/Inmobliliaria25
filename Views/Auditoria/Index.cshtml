<!-- Views/ Auditoria/index.cshtml-->
@model Inmobiliaria25.Models.AuditoriaUsuarioViewModel

<h2>Auditoría</h2>

<form asp-action="Index" method="get" class="mb-3">
  <select class="form-select" name="idUsuario" onchange="this.form.submit()">
    <option value="">-- Filtrar por usuario --</option>
    @foreach (var u in Model.Usuarios)
    {
      <option value="@u.IdUsuario">@u.Apellido @u.Nombre</option>
    }
  </select>
</form>

<table class="table table-even-columns table-striped table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Nro</th>
      <th>Usuario</th>
      <th>Acción</th>
      <th>Observación</th>
      <th>Fecha y hora</th>
    </tr>
  </thead>
  <tbody>
    @if (Model.Auditorias.Count > 0)
    {
      foreach (var a in Model.Auditorias)
      {
        <tr>
          <td>@a.IdAuditoria</td>
          <td>@a.Usuario.Apellido @a.Usuario.Nombre</td>
          <td>@a.Accion</td>
          <td>@a.Observacion</td>
          <td>@a.FechaYHora</td>
        </tr>
      }
    }
    else
    {
      <tr>
        <td colspan="5" class="text-center">No existen auditorías para este usuario.</td>
      </tr>
    }
  </tbody>
</table>
